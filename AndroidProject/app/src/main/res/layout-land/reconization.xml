<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SurfaceView
        android:id="@+id/camera"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_reconization"/>
    <ImageView
        android:id="@+id/preview"
        android:visibility="invisible"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom"/>
    <ImageView
        android:id="@+id/btn_r_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|right"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
       >
        <ImageView
            android:id="@+id/btn_r_camera"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_camera"/>
        <ImageView
            android:id="@+id/btn_r_dictionary"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_dictionary"/>
        <ImageView
            android:id="@+id/btn_r_sound"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_sound"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/progress_bar1"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:id="@+id/text_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_cover"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="chair"
        android:textSize="80sp"
        android:textColor="@color/colorAccent"
        />
    <ImageView
        android:id="@+id/finish_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_finnished"/>
    <ImageView
        android:id="@+id/btn_r_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/go"
        android:layout_gravity="bottom|center"
        android:layout_margin="5dp"
        />
    <ImageView
        android:id="@+id/feedingBorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/feeding"/>
</FrameLayout>
